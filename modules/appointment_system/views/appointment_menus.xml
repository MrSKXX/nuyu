<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Actions -->
        <record id="action_appointment" model="ir.actions.act_window">
            <field name="name">Appointments</field>
            <field name="res_model">appointment.appointment</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first appointment
                </p>
                <p>
                    Schedule patient appointments with doctors.
                </p>
            </field>
        </record>
        
        <!-- NEW: Calendar View Action -->
        <record id="action_appointment_calendar" model="ir.actions.act_window">
            <field name="name">Appointment Calendar</field>
            <field name="res_model">appointment.appointment</field>
            <field name="view_mode">calendar,tree,form</field>
            <field name="context">{'search_default_today': 1}</field>
        </record>
        
        <!-- NEW: Today's Appointments Action -->
        <record id="action_appointments_today" model="ir.actions.act_window">
            <field name="name">Today's Appointments</field>
            <field name="res_model">appointment.appointment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('appointment_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), 
                              ('appointment_date', '&lt;', datetime.datetime.combine(context_today() + datetime.timedelta(days=1), datetime.time(0,0,0)))]</field>
        </record>
        
        <!-- Main Menu -->
        <menuitem id="menu_appointment_root"
                  name="Appointments"
                  groups="base.group_user"
                  sequence="20"/>
        
        <!-- Operations Menu -->
        <menuitem id="menu_appointment_operations"
                  name="Operations"
                  parent="menu_appointment_root"
                  sequence="10"/>
        
        <menuitem id="menu_appointments"
                  name="All Appointments"
                  parent="menu_appointment_operations"
                  action="action_appointment"
                  sequence="10"/>
        
        <!-- NEW: Calendar Menu -->
        <menuitem id="menu_appointment_calendar"
                  name="ðŸ“… Calendar View"
                  parent="menu_appointment_operations"
                  action="action_appointment_calendar"
                  sequence="20"/>
        
        <!-- NEW: Today's Appointments Menu -->
        <menuitem id="menu_appointments_today"
                  name="ðŸ“‹ Today's Schedule"
                  parent="menu_appointment_operations"
                  action="action_appointments_today"
                  sequence="30"/>
        
    </data>
</odoo>