<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Enhanced Appointment Form View -->
        <record id="view_appointment_form" model="ir.ui.view">
            <field name="name">appointment.appointment.form</field>
            <field name="model">appointment.appointment</field>
            <field name="arch" type="xml">
                <form string="Appointment">
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" 
                                states="draft" class="btn-primary"/>
                        <button name="action_done" type="object" string="Done" 
                                states="confirmed" class="btn-success"/>
                        <button name="action_cancel" type="object" string="Cancel" 
                                states="draft,confirmed"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="appointment_date"/>
                                <field name="duration" readonly="1"/>
                                <field name="treatment_type"/>
                                <field name="has_multiple_treatments" invisible="1"/>
                            </group>
                            <group>
                                <field name="patient_id"/>
                                <field name="practitioner_id"/>
                                <field name="room"/>
                                <field name="price" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <!-- Show treatment details for multiple treatments -->
                            <page string="Treatment Details" attrs="{'invisible': [('treatment_type', '!=', 'multiple')]}">
                                <field name="treatment_line_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="treatment_type"/>
                                        <field name="practitioner_id" placeholder="Who performs this treatment"/>
                                        <field name="duration"/>
                                        <field name="price"/>
                                    </tree>
                                    <form string="Treatment Detail">
                                        <group>
                                            <group>
                                                <field name="treatment_type"/>
                                                <field name="practitioner_id"/>
                                            </group>
                                            <group>
                                                <field name="duration"/>
                                                <field name="price"/>
                                                <field name="sequence"/>
                                            </group>
                                        </group>
                                        <field name="notes" placeholder="Special instructions for this treatment..."/>
                                    </form>
                                </field>
                                <div class="oe_note" attrs="{'invisible': [('treatment_line_ids', '!=', [])]}">
                                    <p>Add multiple treatments for this appointment. Each treatment can have a different practitioner for commission tracking.</p>
                                </div>
                            </page>
                            
                            <!-- Show simplified view for single treatments -->
                            <page string="Treatment Info" attrs="{'invisible': [('treatment_type', '=', 'multiple')]}">
                                <group>
                                    <p>This is a single treatment appointment. To add multiple treatments, change the Treatment type to "Multiple Treatments".</p>
                                </group>
                            </page>
                            
                            <page string="Notes">
                                <field name="notes" placeholder="General appointment notes..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Enhanced Appointment Tree View -->
        <record id="view_appointment_tree" model="ir.ui.view">
            <field name="name">appointment.appointment.tree</field>
            <field name="model">appointment.appointment</field>
            <field name="arch" type="xml">
                <tree decoration-info="state=='draft'" decoration-success="state=='confirmed'"
                      decoration-warning="has_multiple_treatments==True">
                    <field name="name"/>
                    <field name="appointment_date"/>
                    <field name="patient_id"/>
                    <field name="practitioner_id"/>
                    <field name="treatment_type"/>
                    <field name="duration"/>
                    <field name="price"/>
                    <field name="room"/>
                    <field name="state"/>
                    <field name="has_multiple_treatments" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <!-- Appointment Calendar View -->
        <record id="view_appointment_calendar" model="ir.ui.view">
            <field name="name">appointment.appointment.calendar</field>
            <field name="model">appointment.appointment</field>
            <field name="arch" type="xml">
                <calendar string="Appointments Calendar" 
                         date_start="appointment_date"
                         color="practitioner_id"
                         quick_add="True">
                    <field name="patient_id"/>
                    <field name="treatment_type"/>
                    <field name="room"/>
                </calendar>
            </field>
        </record>
        
        <!-- Appointment Search View -->
        <record id="view_appointment_search" model="ir.ui.view">
            <field name="name">appointment.appointment.search</field>
            <field name="model">appointment.appointment</field>
            <field name="arch" type="xml">
                <search string="Search Appointments">
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="practitioner_id"/>
                    <separator/>
                    <filter string="Today" name="today" 
                            domain="[('appointment_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), 
                                    ('appointment_date', '&lt;', datetime.datetime.combine(context_today() + datetime.timedelta(days=1), datetime.time(0,0,0)))]"/>
                    <filter string="This Week" name="this_week" 
                            domain="[('appointment_date', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                    ('appointment_date', '&lt;', (context_today() + datetime.timedelta(days=7-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <filter string="Multiple Treatments" name="multiple_treatments" 
                            domain="[('treatment_type', '=', 'multiple')]"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Practitioner" name="group_practitioner" context="{'group_by': 'practitioner_id'}"/>
                        <filter string="Treatment Type" name="group_treatment" context="{'group_by': 'treatment_type'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        
    </data>
</odoo>